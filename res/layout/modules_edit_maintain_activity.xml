            android:hint=""
            ></EditText>
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""/>
    </TableRow>
        <TableRow  android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/signup_hit_input6">
