            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="最长保养间隔："/>
        <EditText android:id="@+id/edt_maintain_max_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint=""
            ></EditText>
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""/>
    </TableRow>
    
	
