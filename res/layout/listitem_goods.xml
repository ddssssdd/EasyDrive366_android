<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    <ImageView android:id="@+id/img_picture"
        android:layout_width="100dip"
        android:layout_height="100dip"
    />
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView android:id="@+id/txt_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:text="title"
            android:textSize="14sp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="10dip"
            android:orientation="horizontal" >

        	<TextView android:id="@+id/txt_mleft"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="middle left"
            android:layout_weight="1"
            android:textSize="12sp"
            />
        	<TextView android:id="@+id/txt_mright"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="middle right"
            android:textSize="12sp"/>    
        </LinearLayout>

         <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="match_parent"
             android:layout_marginTop="10dip"
             android:orientation="horizontal" >

        	<TextView android:id="@+id/txt_bleft"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="bottom left"
            android:textSize="12sp"/>
        	<TextView android:id="@+id/txt_bright"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="bottom right"
            android:textSize="12sp"/>    
        </LinearLayout>
    </LinearLayout>    
    

</LinearLayout>
