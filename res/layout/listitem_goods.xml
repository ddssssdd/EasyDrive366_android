<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/img_picture"
        android:layout_width="@dimen/pic_cell_width"
        android:layout_height="@dimen/pic_cell_height"
        android:layout_margin="10dip"
        android:contentDescription="@string/app_name" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/pic_cell_height"
        android:layout_margin="10dip"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="title"
            
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="10dip"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/txt_mleft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                
                android:text="middle left"
                android:textSize="14sp"
                android:textColor="@color/red" />

            <TextView
                android:id="@+id/txt_mright"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                
                android:text="middle right"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="10dip"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/txt_bleft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="bottom left"
                android:textColor="@color/red"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txt_bright"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:text="bottom right"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>