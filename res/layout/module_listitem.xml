<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"   
    android:background="@drawable/signup_hit_input2">
    
    <LinearLayout android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dip"
        android:orientation="vertical">
        <TextView android:id="@+id/txt_listitem_detail_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            
            android:textSize="18sp"/>
        <TextView android:id="@+id/txt_listitem_detail_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"/>
    </LinearLayout>
    <LinearLayout android:layout_width="80dp"
        android:layout_height="wrap_content"   
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:orientation="vertical">
        <TextView android:id="@+id/txt_listitem_detail_right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textSize="10sp"/>
    </LinearLayout>

</RelativeLayout>