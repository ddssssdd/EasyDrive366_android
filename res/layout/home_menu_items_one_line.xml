<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="50dp"
    android:background="@drawable/home_select_list_style"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/listitem_title"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:textColor="@android:color/secondary_text_light"
        android:textSize="18sp"
        android:textStyle="bold"
         />
	
    <TextView
        android:id="@+id/listitem_content"
        android:layout_width="150dp"
        android:layout_marginLeft="5dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:maxLines="3"
        android:layout_toRightOf="@id/listitem_title"
        android:textColor="@android:color/secondary_text_light"
        android:textSize="12sp"
         />
    <ImageView
        android:id="@+id/listitem_pic"
        android:layout_width="35dip"
        android:layout_height="35dip"
        android:layout_toRightOf="@id/listitem_content"
        android:background="@drawable/phone" 
        android:layout_centerVertical="true"/>
</RelativeLayout>